{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Adicione isso */
    "types": ["@netlify/functions"] // Inclua as definições de tipo do Netlify
  },
  "include": ["vite.config.ts", "functions/**/*.ts", ".netlify/functions/getPlayers.ts"] // Inclua também suas funções
}
